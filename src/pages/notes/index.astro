---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

const all = (await getCollection("notes", p => !p.data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const typeLabel: Record<string, string> = {
  note: "현장 노트", faq: "FAQ", checklist: "체크리스트", tip: "실무 팁",
};
---
<BaseLayout
  title="실무노트 — 간병연구소"
  description="간병 현장에서 바로 쓸 수 있는 실무 메모, FAQ, 체크리스트입니다."
>
  <Header />
  <main>
    <div class="page-header">
      <div class="container">
        <div class="eyebrow" style="margin-bottom: 14px;">Practice Notes</div>
        <h1 class="page-title">실무노트</h1>
        <p class="page-lead">현장에서 자주 묻는 질문, 체크리스트, 실무 팁을 정리합니다.</p>
      </div>
    </div>

    <div class="container" style="padding-top: 0; padding-bottom: 72px;">

      <!-- Archive Band -->
      <div class="archive-band">
        <div class="archive-left">
          <div class="archive-label">Archive</div>
          <div class="archive-title">2018년부터 쌓아온 현장 기록</div>
          <p class="archive-body">
            간병연구소의 초기 실무노트는 서울간병인협회 블로그에 보존되어 있습니다.
            간병일지 양식, 의사소통 가이드, 호스피스 케어 등 현장 기록을 확인할 수 있습니다.
          </p>
        </div>
        <a
          href="https://www.seoulhr.com/blog"
          target="_blank"
          rel="noopener noreferrer"
          class="archive-link"
        >
          아카이브 보기 <span class="archive-arrow">↗</span>
        </a>
      </div>

      {all.length > 0 ? (
        <div class="notes-list">
          {all.map(p => (
            <a href={`/notes/${p.slug}/`} class="ncard">
              <div class="ncard-left">
                <span class="tag tag-accent">{typeLabel[p.data.type] ?? p.data.type}</span>
                <div class="ncard-title">{p.data.title}</div>
                {p.data.summary && <div class="ncard-summary">{p.data.summary}</div>}
              </div>
              <div class="ncard-right">
                <span class="label">{p.data.date.toISOString().slice(0,10)}</span>
                <span class="arrow">→</span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <div class="empty-icon">✦</div>
          <p>첫 번째 실무노트가 곧 공개됩니다.</p>
          <p style="margin-top:8px;">리서치 브리프는 <a href="/research/">여기서</a> 확인하세요.</p>
        </div>
      )}
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
.page-header {
  background: var(--cream);
  border-bottom: 1px solid var(--bd);
  padding: 52px 0 40px;
  position: relative;
}
.page-header::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--accent), var(--gold) 55%, transparent);
}
.page-title {
  font-family: var(--serif);
  font-weight: 600;
  font-size: clamp(22px, 3vw, 30px);
  color: var(--ink);
  margin-bottom: 12px;
}
.page-lead {
  font-size: 14px;
  font-weight: 300;
  line-height: 1.8;
  color: var(--muted);
}
.notes-list {
  border: 1px solid var(--bd);
  border-top: none;
  border-radius: 0 0 var(--r) var(--r);
  overflow: hidden;
}
.ncard {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
  padding: 20px 22px;
  border-bottom: 1px solid var(--bd);
  text-decoration: none;
  color: inherit;
  transition: background 0.13s;
}
.ncard:last-child { border-bottom: none; }
.ncard:hover { background: var(--cream); }
.ncard-left { display: flex; flex-direction: column; gap: 6px; }
.ncard-title {
  font-family: var(--serif);
  font-weight: 600;
  font-size: 15px;
  color: var(--ink);
  line-height: 1.45;
}
.ncard-summary {
  font-size: 13px;
  font-weight: 300;
  color: var(--muted);
  line-height: 1.6;
}
.ncard-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8px;
  flex-shrink: 0;
}
.arrow {
  font-family: var(--roman);
  font-size: 18px;
  color: var(--subtle);
  transition: color 0.13s, transform 0.13s;
}
.ncard:hover .arrow { color: var(--accent); transform: translateX(3px); }
.empty-state {
  text-align: center;
  padding: 64px 20px;
  border: 1px dashed var(--bd);
  border-top: none;
  border-radius: 0 0 var(--r) var(--r);
}
.empty-icon {
  font-size: 28px;
  color: var(--subtle);
  margin-bottom: 16px;
}
.empty-state p {
  font-size: 14px;
  font-weight: 300;
  color: var(--muted);
}
.empty-state a { color: var(--accent); text-decoration: underline; text-underline-offset: 3px; }

.archive-band {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32px;
  padding: 24px 28px;
  background: var(--cream);
  border: 1px solid var(--bd);
  border-top: none;
  border-left: 3px solid var(--gold);
  margin-bottom: 0;
}
.archive-label {
  font-family: var(--roman);
  font-size: 10px;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  color: var(--gold);
  margin-bottom: 5px;
}
.archive-title {
  font-family: var(--serif);
  font-weight: 600;
  font-size: 15px;
  color: var(--ink);
  margin-bottom: 6px;
}
.archive-body {
  font-size: 13px;
  font-weight: 300;
  line-height: 1.65;
  color: var(--muted);
  max-width: 460px;
}
.archive-link {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-family: var(--sans);
  font-size: 13px;
  font-weight: 500;
  color: var(--accent);
  border: 1px solid var(--bd);
  padding: 9px 18px;
  border-radius: var(--r);
  white-space: nowrap;
  flex-shrink: 0;
  text-decoration: none;
  transition: background 0.14s, border-color 0.14s;
}
.archive-link:hover { background: var(--cream-2); border-color: var(--accent); }
.archive-arrow {
  font-family: var(--roman);
  font-size: 16px;
  display: inline-block;
  transition: transform 0.13s;
}
.archive-link:hover .archive-arrow { transform: translate(2px, -2px); }
@media (max-width: 600px) {
  .archive-band { flex-direction: column; align-items: flex-start; gap: 16px; }
}
</style>
