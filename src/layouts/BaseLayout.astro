---
const { title = "간병연구소", description = "간병 데이터와 제도 정보를 연구·정리합니다." } = Astro.props;
---
<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
        :root{
          --max: 1040px;
          --doc: 760px;
          --fg: #0b0f19;
          --muted: #5b6476;
          --bd: rgba(15, 23, 42, .10);
          --bg: #ffffff;
          --soft: rgba(15, 23, 42, .04);
      
          /* 포인트 컬러 하나만 */
          --accent: #2563eb; /* blue */
          --accent-weak: rgba(37, 99, 235, .12);
      
          --r-lg: 18px;
          --r-md: 14px;
        }
      
        body{
          margin:0;
          color:var(--fg);
          background:
            radial-gradient(1200px 600px at 15% -10%, rgba(37,99,235,.10), transparent 60%),
            radial-gradient(900px 500px at 90% -20%, rgba(15,23,42,.06), transparent 55%),
            var(--bg);
          font-family: ui-sans-serif, system-ui, -apple-system, "Apple SD Gothic Neo", "Noto Sans KR", sans-serif;
          -webkit-font-smoothing: antialiased;
          text-rendering: optimizeLegibility;
        }
      
        a{ color:inherit; text-decoration:none; }
        a:hover{ text-decoration:none; }
      
        .container{ max-width: var(--max); margin:0 auto; padding:0 18px; }
        .doc{ max-width: var(--doc); }
      
        .rule{ border-top: 1px solid var(--bd); }
      
        .muted{ color: var(--muted); }
      
        /* 버튼 */
        .btn{
          display:inline-flex; gap:8px; align-items:center;
          padding:10px 14px;
          border:1px solid var(--bd);
          border-radius: 999px;
          background: rgba(255,255,255,.65);
          backdrop-filter: blur(8px);
          transition: transform .08s ease, box-shadow .18s ease, border-color .18s ease;
        }
        .btn:hover{ transform: translateY(-1px); box-shadow: 0 10px 28px rgba(2,6,23,.08); border-color: rgba(37,99,235,.25); }
      
        .btn.primary{
          background: var(--fg);
          border-color: var(--fg);
          color:#fff;
        }
        .btn.primary:hover{ border-color: var(--fg); }
      
        /* 카드 */
        .card{
          border: 1px solid var(--bd);
          border-radius: var(--r-lg);
          background: rgba(255,255,255,.72);
          backdrop-filter: blur(10px);
          box-shadow: 0 10px 30px rgba(2,6,23,.06);
          transition: transform .08s ease, box-shadow .18s ease, border-color .18s ease;
        }
        .card:hover{
          transform: translateY(-1px);
          box-shadow: 0 16px 44px rgba(2,6,23,.10);
          border-color: rgba(37,99,235,.25);
        }
        .card.pad{ padding:14px; }
      
        .grid3{ display:grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap:14px; }
        @media (max-width: 860px){ .grid3{ grid-template-columns:1fr; } }
      
        /* 타이포 */
        h1{ font-size: 40px; line-height:1.12; letter-spacing:-.03em; margin:0 0 10px 0; }
        h2{ font-size: 20px; line-height:1.25; letter-spacing:-.02em; margin:0; }
        p, li{ line-height:1.85; }
      
        /* 링크 강조(포인트 컬러) */
        .link{
          color: var(--accent);
          text-decoration: none;
        }
        .link:hover{ text-decoration: underline; }
      
        /* 섹션 간 간격 */
        .section{ padding: 18px 0; }
      </style>
  </head>
  <body>
    <slot />
  </body>
</html>